{% set route = app.request.attributes.get('_route') %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Hi, my name is Sander Blue and I'm a software engineer.">
        <meta name="author"  content="Sander Blue">
        <title>{% block title %}Sander Blue{% endblock %}</title>

        {% block globalStylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/main.min.css') }}">
        {% endblock %}

        {% block stylesheets '' %}

        <link rel="icon" type="image/x-icon" href="{{ asset('/assets/img/favicon/favicon.ico') }}">
    </head>
    <body>
        {% block header %}
            {% include '_header.html.twig' %}
        {% endblock %}

        <main class="outer-container" role="main">
            {% block body %}{% endblock %}
        </main>

        {% block footer %}
            {% include '_footer.html.twig' %}
        {% endblock %}

        {% block javascripts %}
            {% if app.debug %}
                <script>
                    require = {
                        urlArgs: "bust=" + (new Date()).getTime()
                    };
                </script>
            {% endif %}
            <script type="text/javascript" data-main="{{ asset('assets/js/init') }}" src="{{ asset('assets/vendor/requirejs/require.js') }}"></script>
            <script>
                (function(i, s, o, g, r, a, m) {
                    i['GoogleAnalyticsObject'] = r;
                    i[r] = i[r] || function() {
                    (i[r].q = i[r].q || []).push(arguments)},
                    i[r].l  = 1 * new Date();
                    a = s.createElement(o),
                    m = s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

                ga('create', 'UA-41944984-1', 'sanderblue.com');
                ga('send', 'pageview');
            </script>
        {% endblock %}
    </body>
</html>
