{% set route = app.request.attributes.get('_route') %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author"  content="">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block globalStylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/vendor/foundation.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/main.min.css') }}">
        {% endblock %}

        {% block stylesheets '' %}

        <link rel="icon" type="image/x-icon" href="{{ asset('/assets/img/favicon/favicon.ico') }}" />
    </head>
    <body cz-shortcut-listen="true">
        {% block header %}
            {% include 'header.html.twig' %}
        {% endblock %}

        <div class="outer-container">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            <script>
                require = {
                    urlArgs: "bust=" + (new Date()).getTime()
                };
            </script>
            <script type="text/javascript" data-main="{{ asset('assets/js/init') }}" src="{{ asset('assets/vendor/requirejs/require.js') }}"></script>
        {% endblock %}
    </body>
</html>
